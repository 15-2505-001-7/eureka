<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.v001ff.footmark.ShowSpotActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="false"
        android:foregroundGravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i4" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i5" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i6" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i7" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i8" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/i9" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/追加投稿"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/horizontalScrollView"
        android:text="追加投稿"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/spotname"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/追加投稿"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_toLeftOf="@+id/追加投稿"
        android:text="地点の名称"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/追加投稿">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>